@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    @*<td>@movie.Name</td>*@
                    <td>@Html.ActionLink(movie.Name, "Details", "Customers", new { movie.Id})</td>

                </tr>
            }
        </tbody>
    </table>
</div>


